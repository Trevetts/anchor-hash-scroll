{
  "name": "anchor-hash-scroll",
  "version": "0.1.2",
  "description": "Anchor hash link scroll tracking and smooth scrolling",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "dependency-check package.json && standard index.js",
    "build-min": "browserify dist.js | uglifyjs > dist/build.min.js",
    "build-docs": "browserify docs/index.js > docs/build.js",
    "build": "browserify dist.js > dist/build.js && cp dist/build.js docs/build.js",
    "build-all": "npm run build && npm run build-docs && npm run build-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jayrbolton/anchor-hash-scroll.git"
  },
  "keywords": [
    "anchor",
    "hash",
    "smooth scroll",
    "scroll"
  ],
  "author": "Jay R Bolton <jayrbolton@gmail.com> (http://jayrbolton.com/)",
  "contributors": [
    "Yutaka Houlette <yutakahoulette@gmail.com> (http://yutakahoulette.com/)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jayrbolton/anchor-hash-scroll/issues"
  },
  "homepage": "https://github.com/jayrbolton/anchor-hash-scroll#readme",
  "dependencies": {
    "jump.js": "1.0.2"
  },
  "devDependencies": {
    "browserify": "^16.1.1",
    "dependency-check": "^3.1.0",
    "standard": "^11.0.1",
    "uglify-js": "^3.3.15"
  }
}
